{
  "title": "Bazarr",
  "uid": "bazarr-exportarr",
  "tags": [
    "bazarr",
    "exportarr",
    "apps"
  ],
  "timezone": "",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5m",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "instance",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "query": "label_values({__name__=~\"bazarr_.*\"}, instance)",
        "refresh": 1,
        "multi": false,
        "includeAll": false,
        "current": {
          "text": "All",
          "value": ".*"
        },
        "label": "instance"
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Status",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "bazarr_system_status{instance=~\"$instance\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "Down",
                  "color": "red"
                },
                "1": {
                  "text": "Up",
                  "color": "green"
                }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": 0
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Health Issues",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(bazarr_system_health_issues{instance=~\"$instance\"})",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Subtitles Downloaded",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "bazarr_subtitles_downloaded_total{instance=~\"$instance\"}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Subtitles Missing",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 0
      },
      "targets": [
        {
          "expr": "bazarr_subtitles_missing_total{instance=~\"$instance\"}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Subtitles Wanted",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 4
      },
      "targets": [
        {
          "expr": "bazarr_subtitles_wanted_total{instance=~\"$instance\"}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "bargauge",
      "title": "Subtitles by Provider",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "bazarr_subtitles_provider_total{instance=~\"$instance\"}",
          "refId": "A",
          "legendFormat": "{{provider}}"
        }
      ],
      "options": {
        "displayMode": "horizontal",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "values": false
        }
      }
    },
    {
      "type": "bargauge",
      "title": "Subtitles by Language",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "targets": [
        {
          "expr": "bazarr_subtitles_language_total{instance=~\"$instance\"}",
          "refId": "A",
          "legendFormat": "{{language}}"
        }
      ],
      "options": {
        "displayMode": "horizontal",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "values": false
        }
      }
    }
  ]
}
